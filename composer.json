{
	"name": "ellipsesynergie/laravel4-backend-demo",
	"description": "A Laravel 4 backend demo including best practices like repository, validator and event handler.",
	"keywords": ["backend", "framework", "laravel"],
	"license": "MIT",
	"repositories": [
		{ "type": "vcs", "url": "http://github.com/ellipsesynergie/api-platform" }
	],
	"require": {
		"laravel/framework": "4.1.*",
		"fzaninotto/faker": "1.3.*@dev",
		"league/fractal": "0.4.*"
	},
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		],
		"psr-0": {
			"App": "app/src/"
		}
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "dev"
}
